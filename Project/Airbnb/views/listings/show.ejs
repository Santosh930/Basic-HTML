<% layout('/layouts/boilerplate') %>
<body>

    <div class="row  my-5">
        <div class="col-8 offset-3">
            <h3>Listing Details:</h3>

    <div class="card" style="width: 30rem;">
        <img src="<%= listing.image %>" class="card-img-top show-img my-2" alt="<%= listing.title %>">
        <div class="card-body">
          <p class="card-text">
            <%= listing.title %> <br>
            <%= listing.description %> <br>
            &#8377;<%= listing.price.toLocaleString() %> <br>
            <%= listing.country %>

          </p>
        </div>
      </div>


      <div    style="display: flex;">
        <div>
            <a  class="btn btn-success px-4 me-2" href="/listings/<%= listing._id %>/edit">Edit</a>
          </div>
    
    <form action="/listings/<%= listing._id %>/?_method=DELETE" method="POST">
        <button class="btn btn-success px-3"  >Delete</button>
    </form>
      </div>

        </div>
    </div>
    <div class="row mb-2">
      <div class="col-8 offset-2">
        <hr>
        <h4>Leave a Review</h4>
        <form action="/listings/<%= listing._id %>/reviews" method="POST" class="needs-validation" novalidate>
          <div class="mb-3">
            <label for="rating"  >Rating</label>
            <input type="range" class="form-range" min="1" max="5"  name="review[rating]" id="rating">
          </div>
          <div class="mb-3">
            <label for="comment" class="form-label">comment</label>
            <textarea required class="form-control" name="review[comment]" id="comment" cols="50" rows="05"></textarea>
            <div class="invalid-feedback">
              Please add some comments.
            </div>
          </div>
          <button class="btn btn-outline-dark">Submit</button>
        </form>
        <hr>
        <p>  <b>All Reviews</b></p>
        <div class="row">
          <% for(review of listing.reviews){ %>
            <div class="card col-5 m-3 p-2 review">
              <div class="card-body ">
                <h5 class="card-title">Santosh Kumar</h5>
                <p class="card-text"><%= review.comment %></p>
                <p class="card-text"><%= review.rating %> &nbsp; <i class="fa-solid fa-star"></i></p>
              </div>
              <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                <button class="btn btn-sm btn-dark">Delete</button>
              </form>
              
            </div>
            <% } %>

        </div>
        
          
            
            

        
        
    
         </div>
    </div>
    
</body>
